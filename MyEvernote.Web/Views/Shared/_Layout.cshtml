        <footer>
            <div class="row">

                <div class="col-lg-6 text-center">
                    <p>Tüm Hakları Saklıdır &copy; My Evernote @DateTime.Now.Year</p>
                </div>
                <div class="col-lg-6 text-center text-warning">
                    <p><strong>Developer by Kerem Ermek</strong></p>
                </div>
            </div>
        </footer>
    </div>
    <!-- /.container -->
    <!-- jQuery -->
    <script src="~/Scripts/jquery-3.2.1.min.js"></script>
    <!-- Bootstrap Core JavaScript -->
    <script src="~/Scripts/bootstrap.min.js"></script>
    @RenderSection("scripts", false)

