@using MyEvernote.Entities.ValueObjects
@model LoginViewModel
@{
    ViewBag.Title = "MyEverNote-Giriş Sayfası";
}


<link href="~/Content/css/Login-Register.css" rel="stylesheet" />
@using (Html.BeginForm())
{
    <div class="container" style="margin-top:80px;">
        <div class="row">
            <div class="col-sm-6 col-md-4 col-md-offset-4 outlined">
                <h1 class="text-center login-title">Giriş Formu</h1>
                <div class="account-wall">
                    <!--{% csrf_token %}-->
                    <div class="form-group">
                        @Html.TextBoxFor(model => model.Username, new
                        {
                            @class = "form-control",
                            placeholder = "Kullanıcı Adı"
                        })
                    </div>
                    <div class="form-group">
                        @Html.PasswordFor(model => model.Password, new
                        {
                            @class = "form-control",
                            placeholder = "Şifre"
                        })

                    </div>

                    <div class="form-group">
                        <button class='btn btn-lg btn-primary btn-block' type='submit'>Giriş Yap</button>
                    </div>
                    <span class="clearfix"></span>
                </div>
                <div class="text-center">
                    Henüz Üye Değil misin? <a href="/Register/Register" class="new-account">Üye OL</a>
                </div>
            </div>
        </div>
    </div>
}

@section scripts{
    <script>
    $(function () {
        $("footer").hide();
    });
    </script>
}