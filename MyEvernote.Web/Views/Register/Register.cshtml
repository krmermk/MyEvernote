@using MyEvernote.Entities.ValueObjects
@model RegisterViewModel
@{
    ViewBag.Title = "MyEvernote-Kayıt Sayfası";
}
@section head{
    <style type="text/css">
        .validation-summary-errors {
            border: 2px dotted #ff0000;
            border-radius: 8px;
            background-color: #d76663;
        }

            .validation-summary-errors ul {
                list-style-type: none;
                padding: 10px;
                color: white;
            }
    </style>
}


<link href="~/Content/css/Login-Register.css" rel="stylesheet" />
<div class="container" style="margin-top:80px;">
    <div class="row">
        <div class="col-sm-6 col-md-4 col-md-offset-4 outlined">
            <h1 class="text-center login-title">Kayıt Formu</h1>
            <div class="account-wall">
                <form class='form-signin' action="/Register/Register" method='POST'>

                    @Html.ValidationSummary(false)
                    <div class="form-group">
                        <input type="text" name="Name" class="form-control" placeholder="Ad">
                    </div>
                    <div class="form-group">
                        <input type="text" name="Surname" class="form-control" placeholder="Soyad">
                    </div>
                    <div class="form-group">
                        <input type="text" name="Username" class="form-control" placeholder="Kullanıc Adı">
                    </div>
                    <div class="form-group">
                        <input type="email" name="Email" class="form-control" placeholder="Email">
                    </div>
                    <div class="form-group">
                        <input type="password" name="Password" class="form-control" placeholder="Şifre">
                    </div>
                    <div class="form-group">
                        <input type="password" name="RePassword" class="form-control" placeholder="Şifre">
                    </div>

                    <div class="form-group">
                        <button class='btn btn-lg btn-primary btn-block' type='submit'>Kayıt Ol</button>
                    </div>
                    <span class="clearfix"></span>
                </form>
            </div>
            <div class="text-center">
                <a href="/Login/Login" class="new-account">Giriş Yap!</a>
            </div>
        </div>
    </div>
</div>
@section scripts{
    <script>
        $(function () {
            $("footer").hide();
        });
    </script>
}