@model IEnumerable<MyEvernote.Entities.Note>

@{
    ViewBag.Title = "Notlarım";
}

<div class="container">
    <div class="row">
        <h2>@ViewBag.Title</h2>
    </div>
    <div class="row">
        <p>
            <a href="/Note/Create" class="btn btn-primary btn-sm"><span class="glyphicon glyphicon-plus"></span>Yeni Not </a>
        </p>
        <table class="table">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.NvgCategory.Title)
                </th>               
                <th>
                    @Html.DisplayNameFor(model => model.Title)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Text)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.CreatedOn)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ModifiedOn)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.IsDeleted)
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.NvgCategory.Title)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Title)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Text)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CreatedOn)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ModifiedOn)
                    </td>
                    <td>
                        @if (item.IsDeleted == true)
                        {
                            <b><span>Evet</span></b>
                        }
                        else
                        {
                            <span>Hayır</span>
                        }
                    </td>
                    <td>
                        @if (item.IsDeleted == true)
                        {

                        }
                        else
                        {
                            <a href="/Note/Edit/@item.ID" class="btn btn-success btn-xs" title="Düzenle"><span class="glyphicon glyphicon-edit"></span></a>
                            <a href="/Note/Details/@item.ID" class="btn btn-info btn-xs" title="Detaylar"><span class="glyphicon glyphicon-list"></span></a>
                            <a href="/Note/Delete/@item.ID" class="btn btn-danger btn-xs" title="Sil" onclick="return confirm('Hesabınızı silmek istediğinize emin misiniz?');">
                                <span class="glyphicon glyphicon-trash"></span>
                            </a>
                        }

                    </td>
                </tr>
            }

        </table>

    </div>
</div>

