
@{
    ViewBag.Title = "RegisterOK";
}
<link href="~/Content/css/Login-Register.css" rel="stylesheet" />
<div class="container" style="margin-top:80px;">
    <div class="row">
        <div class="col-sm-6 col-md-4 col-md-offset-4 outlined">
            <h1 class="text-center login-title">Yönlendiriliyorsunuz...</h1>
            <div class="account-wall">
                <div class="text-success">
                    <h2><span class="glyphicon glyphicon-ok"></span>&nbsp;&nbsp;&nbsp;Kayıt işlemi başarılı</h2>
                    <hr />
                    <p class="text-justify">
                        Lütfen email adresinize gönderilen aktivasyon link'ine tıklayarak hesabınızı aktive ediniz.
                        Hesabınızı aktive etmeden not yazamaz ve yorum beğenemezsiniz.
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>
@section scripts{
    <script>
        $(function () {
            $("footer").hide();

            setTimeout(function () {
                window.location = "/Login/Login";
            }, 5000)
        });
    </script>
}
